<%= render 'shared/content_title', title: 'Public Wikis' %>
<div class="container">
<div class="row">
  <% @wikis.each do |wiki| %>
  <% if wiki.pubilc %>
  <div class="recent-news-item clearfix well"><div class="recent-news-item-date"><%= wiki.created_at.strftime("%e") %><span><%= wiki.created_at.strftime("%b") %></span></div>
    <div class="recent-news-item-description">
      <h3 class="recent-news-item-title"><%= link_to wiki.title, wiki %></h3>
      <span class="recent-news-item-comments"><%#= link_to wiki.articles.count, wiki_articles_path(wiki) %> Articles</span></br>
      <div class="recent-news-item-excerpt">
        <p><%= markdown truncate(wiki.information, length: 100) %> <%= link_to 'read more ->', wiki %></p>
        </div>
    </div>
  </div> <!-- wiki-item -->
    <% end %>
  <% end %>
</div>
  <%= will_paginate @wikis, renderer: BootstrapPagination::Rails %>           
</div>
                
