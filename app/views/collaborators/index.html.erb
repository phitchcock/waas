<%= render 'shared/collaboratornav' %>
<div class="container">
  <h3>Collaborators</h3>
  <hr>
  <div class="row">
  <% @idea.collaborators.each do |collaborator| %>
    <div class="col-md-3">
      <div class="thumbnail text-center">
        <div class="testimonial-image">
          <%= image_tag(collaborator.user.avatar.thumb.url) %>
        </div>
        <div class="caption">
          <h4><%= collaborator.user.email %></h4>
          <p>online | <%= collaborator.user.ideas.count %> ideas</p>          
        </div>
        <div>
          <%#= link_to 'make collaborator', idea_collaborators_path(@idea, user_id: collaborator.user.id), method: :post, class: 'btn btn-secondary', disabled: 'disabled' %>
          <%= link_to 'remove collaborator', idea_collaborator_path(@idea, collaborator), method: :delete, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <%#= will_paginate @collaborators, renderer: BootstrapPagination::Rails %>

  <h3>Add Collaborator</h3>
  <hr>
  <div class="row">
  <% @idea.not_users.each do |user| %>
    <div class="col-md-3">
      <div class="thumbnail text-center">
        <div class="testimonial-image">
          <%= image_tag(user.avatar.thumb.url) %>
        </div>
        <div class="caption">
          <h4><%= user.email %></h4>
          <p>online | <%= user.ideas.count %> ideas</p> 
        </div>
        <div>
          <%= link_to 'add collaborator', idea_collaborators_path(@idea, user_id: user.id), method: :post, class: 'btn btn-secondary' %>
        </div>
      </div> <!-- /.well -->
    </div>
  <% end %>
  </div>
  <%#= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
