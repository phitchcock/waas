<%= render 'shared/usernav' %>
<div class="container">
  <section>
    <div class="row">
      <% current_user.collaborators.each do |collab| %>
      <div class="col-md-3 text-center">
        <div class="thumbnail" style="text-align: center">
          <div class="testimonial-image">
            <%#= image_tag(collab.avatar.thumb.url) %>
          </div>
          <div class="caption">
            <h4><%= link_to collab.idea.title, [collab.idea] %></h4>
            <p>online | <%= collab.idea.comments.count %> comments</p>
          </div>
          <div>
            <%#= link_to 'invite collaborator', users_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div> <!-- col -->
      <% end %>
    </div> <!-- row -->
  </section> <!-- section -->
</div>